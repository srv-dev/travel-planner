
<div class="dest-list">
  <h3> Here's list of activities in <%= @destination.name %> </h3>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <div class="card card-style">
        <% @destination.activities.each do |activity| %>
          <ul class="list-names list-group list-group-flush">
            <li class="list-group-item">
              <i class="material-icons card-icon">
                <%= link_to 'add', activities_path(activity.id), :method => :post, class: 'plus-link' %>
              </i>
              <%= activity.name %>
              $ <%= activity.price.round %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
