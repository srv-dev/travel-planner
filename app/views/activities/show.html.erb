
<div class="dest-list">
  <h3> Here's list of activities in <%= @destination.name %> </h3>
</div>

<div class="container">
  <div class="row">
    <% @destination.activities.each do |activity| %>
    <div class="col-4">
      <div class="card-deck">
        <div class="card">
          <%= link_to image_tag(activity.image, class: 'card-img-top'), destination_path(@destination.id) %>
          <div class="card-body">
            <h5 class="card-title">
              <i class="material-icons card-icon">
              <%= link_to 'add', activities_path(activity.id), :method => :post, class: 'plus-link' %>
              </i>
              <%= activity.name %>
              <strong> $ <%= activity.price.round %> </strong>
            </h5>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
