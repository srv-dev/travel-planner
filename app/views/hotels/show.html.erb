
<div class="dest-list">
  <h3> Here's list of hotels in <%= @destination.name %> </h3>
</div>


<div class="container">
  <div class="row">
    <% @destination.hotels.each do |hotel| %>
    <div class="col-4">
      <div class="card-deck">
      <div class="card">
        <%= link_to image_tag(hotel.image, class: 'card-img-top'), destination_path(@destination.id) %>
        <div class="card-body">
          <h5 class="card-title">
            <i class="material-icons card-icon">
            <%= link_to 'add', hotels_path(hotel.id), :method => :post, class: 'plus-link' %>
            </i>
            <%= hotel.name %>
            <strong> $ <%= hotel.price.round %> </strong>
          </h5>
        </div>
      </div>
    </div>
    </div>
    <% end %>
  </div>
</div>
