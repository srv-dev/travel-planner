<!DOCTYPE html>
<html>
  <head>
    <title>TravelPlanner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-color">
        <% if @current_user.present? %>
          <%= link_to(user_path(@current_user.id), class: "navbar-brand") do %>
            <img src="/assets/tp-orig.svg" width="40" height="40" class="d-inline-block align-top" alt="">Travel Planner
          <% end %>
        <% else %>
        <%= link_to(login_path, class: "navbar-brand") do %>
          <img src="/assets/tp-orig.svg" width="40" height="40" class="d-inline-block align-top" alt="">Travel Planner
        <% end %>
        <% end %>
        <div>
          <% if @current_user.present? %>
            Welcome, <%= @current_user.name %>
            <%= link_to 'Logout', login_path, method:'delete' %>
          <% else %>
            <%= link_to 'Login', login_path %>
            <%= link_to 'Sign Up', new_user_path %>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
