<!-- Login form -->

<% if flash[:error] %>
  <div class="alert alert-danger" role="alert">
  <%= flash[:error] %>
</div>
<% end %>

<div class="container">
	<div class="login-container">
    <!-- <div id="output"></div> -->
    <div class="avatar">
      <img width="150px" class="avatar-img" src="/assets/tp.svg" alt="">

    </div>
    <div class="form-box">
      <%= form_tag login_path do %>
      <%= email_field_tag :email, nil, placeholder: 'email'%>

      <%= password_field_tag :password, nil, placeholder: 'password' %>

      <%= button_tag 'Login', class: 'btn btn-info btn-block login' %>
      <% end %>
    </div>
  </div>
</div>
